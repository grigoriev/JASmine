<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="001-create-table-service" author="Sergey Grigoriev">
        <createTable tableName="service">
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(1024)"/>
        </createTable>

        <addPrimaryKey tableName="service" columnNames="name"/>

        <addNotNullConstraint tableName="service" columnName="name" columnDataType="varchar(255)"/>

        <rollback>
            <dropTable tableName="service"/>
        </rollback>
    </changeSet>

    <changeSet id="002-create-table-user" author="Sergey Grigoriev">
        <createTable tableName="user">
            <column name="service_name" type="varchar(255)"/>
            <column name="username" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="active" type="boolean" defaultValueBoolean="true"/>
        </createTable>

        <addPrimaryKey tableName="user" columnNames="service_name, username"/>

        <addNotNullConstraint tableName="user" columnName="service_name" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="user" columnName="username" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="user" columnName="password" columnDataType="varchar(255)"/>

        <addForeignKeyConstraint
                baseTableName="user"
                baseColumnNames="service_name"
                constraintName="fk#user:service_name"
                referencedTableName="service"
                referencedColumnNames="name"
        />

        <rollback>
            <dropTable tableName="user"/>
        </rollback>
    </changeSet>

    <changeSet id="003-create-table-user_property" author="Sergey Grigoriev">
        <createTable tableName="user_property">
            <column name="id" type="bigint"/>
            <column name="service_name" type="varchar(255)"/>
            <column name="username" type="varchar(255)"/>
            <column name="property" type="varchar(255)"/>
            <column name="value" type="varchar(255)"/>
        </createTable>

        <addPrimaryKey tableName="user_property" columnNames="id"/>

        <addAutoIncrement tableName="user_property" columnName="id" columnDataType="bigint"/>

        <addNotNullConstraint tableName="user_property" columnName="id" columnDataType="bigint"/>
        <addNotNullConstraint tableName="user_property" columnName="service_name" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="user_property" columnName="username" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="user_property" columnName="property" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="user_property" columnName="value" columnDataType="varchar(255)"/>

        <addForeignKeyConstraint
                baseTableName="user_property"
                baseColumnNames="service_name, username"
                constraintName="fk#user_property:user_id"
                referencedTableName="user"
                referencedColumnNames="service_name, username"
        />

        <rollback>
            <dropTable tableName="user_property"/>
        </rollback>
    </changeSet>


    <changeSet id="004-create-table-role" author="Sergey Grigoriev">
        <createTable tableName="role">
            <column name="service_name" type="varchar(255)"/>
            <column name="role" type="varchar(255)"/>
            <column name="default_assignment" type="boolean" defaultValueBoolean="false"/>
            <column name="description" type="varchar(1024)"/>
        </createTable>

        <addPrimaryKey tableName="role" columnNames="service_name, role"/>

        <addNotNullConstraint tableName="role" columnName="service_name" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="role" columnName="role" columnDataType="varchar(255)"/>

        <addForeignKeyConstraint
                baseTableName="role"
                baseColumnNames="service_name"
                constraintName="fk#role:service_name"
                referencedTableName="service"
                referencedColumnNames="name"
        />

        <rollback>
            <dropTable tableName="role"/>
        </rollback>
    </changeSet>

    <changeSet id="005-many-to-many-user_role" author="Sergey Grigoriev">
        <createTable tableName="user_role">
            <column name="id" type="bigint"/>
            <column name="user_service_name" type="varchar(255)"/>
            <column name="username" type="varchar(255)"/>
            <column name="role_service_name" type="varchar(255)"/>
            <column name="role" type="varchar(255)"/>
        </createTable>

        <addPrimaryKey tableName="user_role" columnNames="id"/>

        <addAutoIncrement tableName="user_role" columnName="id" columnDataType="bigint"/>

        <addNotNullConstraint tableName="user_role" columnName="id" columnDataType="bigint"/>
        <addNotNullConstraint tableName="user_role" columnName="user_service_name" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="user_role" columnName="username" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="user_role" columnName="role_service_name" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="user_role" columnName="role" columnDataType="varchar(255)"/>

        <addForeignKeyConstraint
                baseTableName="user_role"
                baseColumnNames="user_service_name, username"
                constraintName="fk#user_role:user_id"
                referencedTableName="user"
                referencedColumnNames="service_name, username"
        />

        <addForeignKeyConstraint
                baseTableName="user_role"
                baseColumnNames="role_service_name, role"
                constraintName="fk#user_role:role_id"
                referencedTableName="role"
                referencedColumnNames="service_name, role"
        />

        <rollback>
            <dropTable tableName="user_role"/>
        </rollback>
    </changeSet>

    <changeSet id="006-create-check-trigger-user_role" author="Sergey Grigoriev">
        <sql>
            <![CDATA[
                ALTER TABLE user_role ADD CONSTRAINT user_role_service_name_check CHECK (
                  user_service_name = role_service_name
                );
            ]]>
        </sql>

        <rollback>
            <dropTable tableName="user_role"/>
        </rollback>
    </changeSet>

    <changeSet id="007-create-table-token" author="Sergey Grigoriev">
        <createTable tableName="token">
            <column name="id" type="varchar(36)"/>
            <column name="service_name" type="varchar(255)"/>
            <column name="username" type="varchar(255)"/>
            <column name="jwt" type="varchar(4096)"/>
        </createTable>

        <addPrimaryKey tableName="token" columnNames="id"/>

        <addNotNullConstraint tableName="token" columnName="id" columnDataType="varchar(36)"/>
        <addNotNullConstraint tableName="token" columnName="service_name" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="token" columnName="username" columnDataType="varchar(255)"/>
        <addNotNullConstraint tableName="token" columnName="jwt" columnDataType="varchar(4096)"/>

        <addForeignKeyConstraint
                baseTableName="token"
                baseColumnNames="service_name, username"
                constraintName="fk#token:user_id"
                referencedTableName="user"
                referencedColumnNames="service_name, username"
        />

        <rollback>
            <dropTable tableName="token"/>
        </rollback>
    </changeSet>
</databaseChangeLog>